<% provide(:title, 'All users') %>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">

			<%= form_tag('/users', method: :get) do %>
	            <div class="input-group custom-search-form">
	                <input type="text" name="name" id="name" class="form-control" placeholder="Search user">
	                  <span class="input-group-btn">
		                <button class="btn btn-default" data-toggle="tooltip" data-placement="top" title="single user" type="submit">
		              	<span class="glyphicon glyphicon-search" ></span>
		              </button>
		              <button class="btn btn-default" data-toggle="tooltip" data-placement="top" title="All Users" type="submit">
		              	<span class="glyphicon glyphicon-th-list"></span>
		              </button>
		            </span>
	            </div><!-- /input-group -->
            <% end %>
        </div>
	</div>
</div>
<p></p>
<div class="container">
	<div class="row">
		<%= will_paginate %>

		<ul class="users">
		  <% @users.each do |user| %>
		    <%= render user %>
		  <% end %>
		</ul>

		<%= will_paginate %>
	</div>
</div>