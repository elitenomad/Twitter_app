<% if signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
      
    </aside>
    <div class="col-md-8">
      <h3>Twitter Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <section id="hero" class="hero-fixed hero-fade hero-medium">
      <div class="hero-wrap-outer">
        <div class="container">
          <div class="hero-wrap-inner">
             <h1 class="pull-left">Twitter</h1>
          </div>
        </div>
      </div>
  </section>

  <div class="container">
      <a class="btn btn-primary">Learn More >></a>          
  </div>

    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-6">

                <div id="hero-custom-content" class="pull-right">
                 
                <%= image_tag "phone-lockup.png" ,size: "350x400"%>
                </div>    
        </div>
      </div>
    </div>
	
<% end %>